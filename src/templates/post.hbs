<script id="post-template" type="text/x-hendlebars-template">
    {{#each posts}}
    <div class="post" data-id="{{this.id}}">
        <h2>{{this.title}}</h2>
        <p>{{this.content}}</p>
        <button class="editPostButton" data-id="{{this.id}}">Edit</button>
        <button class="deletePostButton" data-id="{{this.id}}">Delete</button>
        <div class="commentsContainer">
            <h3>Comments:</h3>
            <ul>
                {{#each comments}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <form class="createCommentForm">
                <input type="text" class="commentInput" placeholder="New comment" required>
                <button type="submit">Add Comment</button>
            </form>
        </div>
    </div>
    {{/each}}
</script>
